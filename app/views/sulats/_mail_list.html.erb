<div class = "prodlist1">
  <div class = "borderlist2">
  <h3><%= yield(:title) %></h3>
  <table class = "table table-striped">
    <tr>
      <th>Subject</th>
      <th>User</th>
      <th>Date</th>
      <th>Action</th>
    </tr>
  <% @sulats.each do |sulat| %>
    <tr>
      <td><%= sulat.sender.firstname %> <%= sulat.sender.lastname %></td>
      <td><%= sulat.subject %></td>
      <td><%= sulat.created_at %></td>
      <td><%= link_to "Show", sulat_path(sulat.id) %>
          <%= link_to "Delete", sulat, :method => "delete",
            data: { confirm: "You sure?" } %></td>
    </tr>
  <% end %>
    </table>
    <%= will_paginate @sulats %>
</div>
</div>
